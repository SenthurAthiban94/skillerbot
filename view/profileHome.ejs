<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/font-awesome/css/font-awesome.min.css">    
        <link rel="stylesheet" href="/libs/bootstrap.min.css" />
        <link rel="stylesheet" href="/libs/animate.min.css" />
        <link rel="stylesheet" href="/libs/font-awesome.min.css" />
        <script src="/libs/js/jquery.min.js" type="text/javascript"></script>
        <link rel="stylesheet" href="/css/port.css" />
        <link href="https://fonts.googleapis.com/css?family=Oswald|Slabo+27px" rel="stylesheet">    
        <link rel="stylesheet" href="/css/social-btns.css"/>
    </head>
    <body>
        <%- include header.ejs %>
        <!-- <%= JSON.stringify(data.user_name)%> -->
        <div class="profile-container">
            <img class="dp" src="<%=data.image_path%>" alt="Display Picture" />
            <h2 class="name"><%= data.user_name%></h2>
            <h3 class="title"><%= (data.role).toUpperCase();%></h3>
            <% if(typeof(data.url_code) !== 'undefined'){%>
            <h2 class="name">Resume Bot Link</h2>
            <h2 class="name">
                <a href="./../bot/<%=data.url_code%>" target="_blank">https://skillerbot.herokuapp.com/bot/<%=data.url_code%></a>
            </h2>
            <div class="text-center">
                <a href="/profile/editanswers">
                    <button type="button" class="btn-proceed"> Edit your Answers </button>
                </a>
            </div>
            <div class="social-container">
                <h3 class="title">Share with</h3>
                <div class="social">
                    <a class="social-icon" data-tooltip="email@gmail.com" href="mailto:senthurathiban@gmail.com">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </a>
                    <!-- <a class="social-icon" data-tooltip="GitHub" href="https://github.com/puikinsh">
                        <i class="fa fa-github" aria-hidden="true"></i>
                    </a> 
                    <a class="social-icon" data-tooltip="LinkedIn" href="https://www.linkedin.com/company/colorlib">
                        <i class="fa fa-linkedin" aria-hidden="true"></i>
                    </a>-->
                    <a class="social-icon tw-shareBot" data-tooltip="Twitter" href="https://skillerbot.herokuapp.com/bot/<%=data.url_code%>">
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                    </a>
                    <a class="social-icon fb-shareBot" data-tooltip="Facebook" href="https://skillerbot.herokuapp.com/bot/<%=data.url_code%>">
                        <i class="fa fa-facebook" aria-hidden="true"></i>
                    </a>
                    <!-- <a class="social-icon" data-tooltip="YouTube" href="https://www.youtube.com/c/Colorlib">
                        <i class="fa fa-youtube" aria-hidden="true"></i>
                    </a>
                    <a class="social-icon" data-tooltip="Instagram" href="https://instagram.com/Colorlib">
                        <i class="fa fa-instagram" aria-hidden="true"></i>
                    </a> -->
                </div>
            </div>
            <%}else{%>
                <div class="text-center">
                    <a href="/profile/editanswers">
                        <button type="button" class="btn-proceed"> Build Your Profile </button>
                    </a>
                </div>
            <%}%>
        </div>
    </body>
</html>