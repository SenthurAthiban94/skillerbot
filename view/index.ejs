    <script>
        function sendMail(){
            let username=document.getElementById('name').value,
                usermail=ValidateEmail(document.getElementById('email').value),
                usercontact=validateMobile(document.getElementById('number').value);
            if(username && usermail && usercontact){
                $('.img-overlay , .loader-gif').show();
                $.ajax({
                    type: "POST",
                    url: '/sendmail',
                    data: {
                            name : username,
                            number : usercontact,
                            email : usermail
                    },
                    dataType: 'json',
                    success : function(data){
                        $('.img-overlay , .loader-gif').hide();
                        $('form')[0].reset()
                        showNotification('success',"Thanks for Contacting Us!","Our Team will contact you soon",2);
                    },
                    error : function(e){
                        $('.img-overlay , .loader-gif').hide();
                        $('form')[0].reset()
                        showNotification('danger',"Unable to Contact!","Please Try Again later",1.5);
                    }
                });
            }else{
                showNotification('danger', (!username ? "Name" : (!usermail ? "Email Id" : (!usercontact ? "Contact Number": "")))+" is Invalid!","All Fields are Mandatory",1);
            }
        }

            function validateMobile(number){
                var phoneno = /^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/;
                if(number.match(phoneno)){
                    return number;
                }
                else{
                    return false;
                }
            }

            function preventMaxTyping(maxlength,element,event){
                setTimeout(() => {
                    if (element.value > maxlength && event.keyCode !== 46 && event.keyCode !== 8){event.preventDefault();element.value=parseInt(element.value.toString().slice(0,-1));}
                }, 100);
            }
            function ValidateEmail(mail) 
            {
                if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mail))
                {
                    return mail;
                }
                return false;
            }
    </script>
